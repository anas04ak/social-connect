<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 1.5rem;">
    
    <h2 class="text-center mb-4 fw-bold" style="background: linear-gradient(to right, #f09433, #dc2743, #cc2366, #bc1888); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
      âœ¨ Sign Up
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true, multipart: true }) do |f| %>

      <div class="mb-3">
        <%= f.label :avatar, "Profile Picture", class: "form-label fw-semibold" %>
        <%= f.file_field :avatar, class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3">
        <%= f.label :username, class: "form-label fw-semibold" %>
        <%= f.text_field :username, class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3">
        <%= f.label :date_of_birth, class: "form-label fw-semibold" %>
        <%= f.date_field :date_of_birth, class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3 position-relative" data-controller="password">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, class: "form-control rounded-pill", data: { password_target: "field" } %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, class: "form-control rounded-pill" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-gradient text-white rounded-pill fw-semibold py-2" %>
      </div>

    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>

<style>
  .btn-gradient {
    background: linear-gradient(to right, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    border: none;
  }

  .btn-gradient:hover {
    opacity: 0.9;
  }

  .form-control:focus {
    border-color: #cc2366;
    box-shadow: 0 0 0 0.2rem rgba(204, 35, 102, 0.25);
  }

  .card {
    background-color: #ffffff;
    border: none;
  }

  label::selection,
  h2::selection {
    background: #dc2743;
    color: #fff;
  }
</style>
